@model HomeBaseCore.Models.FileModel

<div class="tile col-md-2" style="padding: 0px 0px 0px 0px; margin: 5px 5px 5px 5px;">
	<div style="height:400px">
		<a href="@Model.contentPath" style="height:100%; width:100%">
			<span class="tile-title" title="@Model.source.FileName" style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis; vertical-align:bottom">@Model.source.FileName</span>
			<div style="height:75%; text-align:center; background-color:black">
				<img src="@Model.contentPath" style="height:100%;" />
			</div>
		</a>
		<div class="p-5" style="font-size:10px">
			<span>@Model.source.FileDescription</span><br />
		</div>
	</div>
</div>